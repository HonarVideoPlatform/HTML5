<script type="text/javascript">
	
	function jsCallbackReady( playerId ) {
		window.kdp = $('#' + playerId).get(0);
		kdp.addJsListener('ccDataLoaded', "ccLoaded");
		kdp.addJsListener('newClosedCaptionsData', "newCCData");
		kdp.addJsListener('changedClosedCaptions', "ccChanged");
	}

	function writeLog(msg) {
		$('#log').append(msg + '<br />');
	}
	function ccLoaded() {
		writeLog('All captions has been loaded.');
	}
	function newCCData() {
		writeLog('A caption asset had been loaded.');
	}
	function ccChanged() {
		writeLog('Caption asset as been changed.');
	}

</script>
<body>
